[alias]
    fa = fetch --all --tags
    ma = checkout master
    dev = checkout develop
    co = checkout
    lb = checkout -
	ctags = !.git/hooks/ctags
    st = status -sb
    mm = merge --no-ff
    sign = commit --amend -S

